{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}



    <div class="uk-flex uk-padding-large">
        <div class=" uk-width-1-3"></div>
        <div class=" uk-width-1-3">
            <h1 class="uk-text-center">Gérer les villes</h1>
        </div>
        <div class=" uk-width-1-3"></div>
    </div>



    <div class="uk-grid">
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5">Nom</div>
        <div class="uk-width-1-5">Code Postal</div>
        <div class="uk-width-2-5">Actions</div>
    </div>

    <body>
    {% for ville in villes %}
        <div class="uk-grid">
            <div class="uk-width-1-5"></div>
            <div class="uk-width-1-5">{{ ville.nom }}</div>
            <div class="uk-width-1-5">{{ ville.codePostal }}</div>
            <div class="uk-width-2-5">
                <p class="uk-margin">
                    <a class="uk-button uk-button-default"
                       href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier</a>
                    <a class="uk-button uk-button-default" href="{{ path('app_ville_delete', {'id': ville.id}) }}">Supprimer</a>
                </p>
            </div>
        </div>
    {% else %}
        <div>
            <div colspan="4">no records found</div>
        </div>
    {% endfor %}

    </body>

    <div class="uk-grid">
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5">
            <p uk-margin>
                <a class="uk-button uk-button-default" href="{{ path('app_ville_new') }}">Ajouter</a>
            </p>
        </div>
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5"></div>
    </div>


    {% if is_granted("ROLE_ADMIN") %}
        <div class="uk-grid">
            <div class="uk-width-1-5"></div>
            <div class="uk-width-1-5">
                <a href="{{ path('app_lieu_index') }}">Gérer les lieux</a>
            </div>
            <div class="uk-width-1-5"></div>
            <div class="uk-width-1-5"></div>
            <div class="uk-width-1-5"></div>
        </div>
    {% endif %}

{% endblock %}