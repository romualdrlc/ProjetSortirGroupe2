{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Tous les participants</h1>



            <div class="uk-flex uk-margin-medium">
                <div class=" uk-width-1-10 uk-text-bold">Email</div>
                <div class=" uk-width-1-10 uk-text-bold" >Roles</div>
                <div class=" uk-width-1-10 uk-text-bold">Password</div>
                <div class=" uk-width-1-10 uk-text-bold">Nom</div>
                <div class=" uk-width-1-10 uk-text-bold">Prenom</div>
                <div class=" uk-width-1-10 uk-text-bold" >Telephone</div>
                <div class=" uk-width-1-10 uk-text-bold">Actif</div>
                <div class=" uk-width-1-10 uk-text-bold">actions</div>
            </div>

                 {% for participant in participants %}
            <div class="uk-flex">
            <div  class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.email }}</div>
                <div   class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.roles ? participant.roles|json_encode : '' }}</div>
                <div class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.password }}</div>
                <div class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.nom }}</div>
                <div class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.prenom }}</div>
                <div class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.telephone }}</div>
                <div class="uk-width-1-10 uk-panel uk-text-truncate">{{ participant.actif ? 'Yes' : 'No' }}</div>
                <div class="uk-width-1-10">
                    <a class="uk-button uk-button-default" href="{{ path('app_participant_show', {'id': participant.id}) }}">show</a>
                    <a class="uk-button uk-button-default" href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>
                </div>
            </div>


        {% else %}
            <div class="uk-grid">
                <div colspan="10">no records found</div>
            </div>
        {% endfor %}

    <div class="uk-grid uk-margin-medium">
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5">
            <a class="uk-button uk-button-default" href="{{ path('app_participant_new') }}">Cr√©er un nouveau participant</a>
        </div>
        <div class="uk-width-1-5"></div>
        <div class="uk-width-1-5"></div>
    </div>
{% endblock %}
